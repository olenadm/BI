@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login";

    string email = string.Empty;
    string senha = string.Empty;
    var isDev = (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") ?? "").ToLower() == "development";
    if (isDev)
    {
        email = "bi@bimagistral.com.br";
        senha = "xIlI";
    }
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-5 col-lg-6 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5" style="background-color: rgba(255,255,255,0.8)">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-12">
                            <div class="p-5">
                                <form class="user my-4" method="post" asp-controller="Login" asp-action="Auth">
                                    <div class="text-center mb-3">
                                        <img src="img/logo.png"/>
                                    </div>
                                    <div class="text-center mb-3">
                                        <h3 class="text-success font-weight-bold">BI Magistral</h3>
                                    </div>
                                    <div class="form-group">
                                        <input type="email" name="email" value="@email" required class="form-control form-control-user" placeholder="E-mail...">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="password" value="@senha" required class="form-control form-control-user" placeholder="Senha...">
                                    </div>
                                    <button type="submit" class="btn btn-info btn-user btn-block">ENTRAR</button>
                                    @if (ViewData["ErrorMsg"] != null)
                                    {
                                        <div class="row">
                                            <div class="col-12 text-center">
                                                <span class="badge badge-pill badge-danger mt-3">
                                                    @ViewData["ErrorMsg"]
                                                </span>
                                            </div>
                                        </div>
                                    }
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="width: 100%; text-align: center; position: fixed; left: 0; bottom: 10px;">
        @* &copy; Developed by BRSOFT Tecnologia Ltda. [www.brsoft.com.br]. *@
    </div>
</div>